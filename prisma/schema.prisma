generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  rol String @default("")
  salon String @default("")
  createdAt DateTime @default(now())
  
  @@map("users")
}

model Receta {
    id            Int     @id @default(autoincrement())
    codigo        String
    nombreProducto String
    proceso       String
    tipo          String
    subCodigo     String
    descripcion   String
    unidadMedida  String?
    porcionBruta  Float
    porcionNeta   Float
    MO            Int
    dueno         String

    @@map("recetas")
}

model Comanda {
  id                  Int                     @id
  lugar               String
  salon               String
  tipo                String
  fecha               DateTime
  nombre              String
  horarioInicio       DateTime
  horarioFin          DateTime
  cantidadMayores     Int @default(0)
  cantidadMenores     Int @default(0)
  observaciones       String? @db.Text

  Plato Plato[]
  
  @@map("comandas")
}

model Plato {
  id        Int     @id @default(autoincrement())
  nombre    String
  cantidad Float 
  comandaId Int
  comanda   Comanda @relation(fields: [comandaId], references: [id])
  fecha     DateTime? 
  gestionado Boolean @default(false)

  @@map("platos")
}

model Produccion {
  id        Int      @id @default(autoincrement())
  fecha     DateTime
  plato     String
  platoPadre String @default("")
  observacion String? @db.Text
  observacionProduccion String? @db.Text
  cantidad Float 
  salon String?
  createdAt DateTime @default(now())
}

model PlatoOculto {
  id       Int      @id @default(autoincrement())
  plato    String
  creadoEn DateTime @default(now())
}

model Expedicion {
  id Int @id @default(autoincrement())
  codigo String
  subCodigo String
  comandaId Int
}